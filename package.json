{
  "name": "explainer-mcp-server",
  "version": "1.1.0",
  "description": "Explainer Agent MCP Server",
  "bin": {
    "mcp-server": "./dist/index.js"
  },
  "files": [
    "dist"
  ],
  "workspaces": [
    "src/*"
  ],
  "scripts": {
    "start": "tsx src/index.ts",
    "build": "tsc && shx chmod +x dist/*.js",
    "docker:build": "docker build -t coral-mcp-server .",
    "docker:run": "docker run -p 3000:3000 --env-file .env coral-mcp-server",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f",
    "docker:compose:build": "docker-compose build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "@solana/web3.js": "^1.98.4",
    "typescript": "^5.9.2"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "shx": "^0.4.0",
    "tsx": "^4.20.5"
  }
}
